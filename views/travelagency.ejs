<!-- views/travelagency.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Travel Agency - Tour Details</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Your custom CSS -->
    <link rel="stylesheet" href="/styles/main.css">
</head
>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">Home</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="/travelagency">Travel Agency</a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4">
        <h2 class="mb-4">Tour Details</h2>
        <p class="mb-2"><strong>Tour Name:</strong> <%= tourName %></p>
        <p class="mb-2"><strong>Tour Description:</strong> <%= tourDescription %></p>
        <p class="mb-2"><strong>Tour Cost:</strong> $<%= tourCost %></p>
        <h3 class="mb-3">Weather Information</h3>
        <p class="mb-2"><strong>Location:</strong> <%= tourWeather.location %></p>
        <p class="mb-2"><strong>Temperature:</strong> <%= tourWeather.temperature %>°C</p>
        <p class="mb-2"><strong>Condition:</strong> <%= tourWeather.condition %></p>
        <p class="mb-2"><strong>Humidity:</strong> <%= tourWeather.humidity %></p>
        <p class="mb-2"><strong>Wind Speed:</strong> <%= tourWeather.windSpeed %> m/s</p>
        <p class="mb-2"><strong>Clouds:</strong> <%= tourWeather.clouds %>%</p>
    </div>

    <form method="post" action="/travelagency" class="container mt-4">
        <!-- Другие поля формы -->
        
        <div class="form-group">
            <label for="country">Country:</label>
            <input type="text" class="form-control" id="country" name="country" >
        </div>
    
        <div class="form-group">
            <label for="hotel">Hotel:</label>
            <input type="text" class="form-control" id="hotel" name="hotel" >
        </div>
    
        <div class="form-group">
            <label for="arrivalDate">Arrival Date:</label>
            <input type="date" class="form-control" id="arrivalDate" name="arrivalDate" >
        </div>
    
        <div class="form-group">
            <label for="departureDate">Departure Date:</label>
            <input type="date" class="form-control" id="departureDate" name="departureDate" >
        </div>
    
        <div class="form-group">
            <label for="adults">Number of Adults:</label>
            <input type="number" class="form-control" id="adults" name="adults" >
        </div>
    
        <div class="form-group">
            <label for="children">Number of Children:</label>
            <input type="number" class="form-control" id="children" name="children" required>
        </div>
    
        <button type="submit" class="btn btn-primary">Show Tour</button>
    </form>
    
    
    <!-- Footer -->
    <footer class="bg-light mt-4 py-3">
        <div class="container">
            <p class="mb-0">Kazikhanova Laura | SE-2209</p>
        </div>
    </footer>

    <!-- Bootstrap JS and Popper.js (for Bootstrap's JavaScript plugins) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- Your custom scripts -->
    <script src="/scripts/main.js"></script>
</body>
</html>
